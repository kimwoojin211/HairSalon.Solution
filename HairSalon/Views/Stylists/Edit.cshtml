@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1>Editing Stylist: @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)
  
  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.Specialty)
  @Html.EditorFor(model => model.Specialty)
  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to stylist details.", "Details")</p>
<p>@Html.ActionLink("Back to all stylists.", "Index")</p>
<p>@Html.ActionLink("Home.", "Index", "Home")</p>