@{
  Layout = "_Layout";
}
@using HairSalon.Models;

<h1>Search results:</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists found! Please try again.</h3>
}

<ul>
@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId})</li>
}
</ul>

<p>@Html.ActionLink("Didn't find who you were looking for? Try another search.", "Search")</p>