@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Stylist>

<h1>Search for a stylist!</h1>

@using (Html.BeginForm())
{
  @Html.Label("name")
  @Html.TextBox("name")
  <input type="submit" value="Search!" />
}

@if(!(Model is null))
{
  @if (Model.Count == 0)
  {
    <h3>No stylists in the database!</h3>
  }

  <ul>
    @foreach (Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("All Stylists", "Index")</p>
<p>@Html.ActionLink("Home.", "Index", "Home")</p>

