@{
  Layout = "_Layout";
}
@using HairSalon.Models;

<h1>Your stylists:</h1>

@if (@Model.Count == 0)
{
  <h3>No stylists in the database!</h3>
}

<ul>
@foreach (Stylist stylist in Model)
{
  <li>@stylist.Name</li>
}
</ul>

<p>@Html.ActionLink("Add a new stylist", "Create")</p>
<p>@Html.ActionLink("Home.", "Index", "Home")</p>