@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>Editing Client: @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")        


  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to client details.", "Details")</p>
<p>@Html.ActionLink("Back to all clients.", "Index")</p>
<p>@Html.ActionLink("Home.", "Index", "Home")</p>